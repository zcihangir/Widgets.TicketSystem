@model DepartmentModel
@{
    Layout = "_AdminLayout";
    ViewBag.Title = Loc["Plugins.Widgets.TicketSystem.Department.Edit"];
}

<form asp-controller="Department" asp-action="Edit" method="post">
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel light form-fit">
                <div class="x_title">
                    <div class="caption">
                        <i class="fa fa-pencil"></i>
                        @Loc["Plugins.Widgets.TicketSystem.Department.Edit"] - @Model.Name
                        <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink(Loc["Plugins.Widgets.TicketSystem.Department.BackToList"], "List")</small>
                    </div>
                    <div class="actions">
                        <div class="btn-group btn-group-devided">
                            <button class="btn btn-success" type="submit" name="save"><i class="fa fa-check"></i> @Loc["Admin.Common.Save"] </button>
                            <button class="btn btn-success" type="submit" name="save-continue"><i class="fa fa-check-circle"></i> @Loc["Admin.Common.SaveContinue"] </button>
                            <span id="department-delete" class="btn btn-danger"><i class="fa fa-trash-o"></i> @Loc["Admin.Common.Delete"]</span>
                        </div>
                    </div>
                </div>
                <div class="x_content form">
                    <partial name="_CreateOrUpdate" model="Model" />
                </div>
            </div>
        </div>
    </div>
</form>
<admin-delete-confirmation button-id="department-delete"/>

<script>
    var deleteConfirmation = new DeleteConfirmation();
    deleteConfirmation.init({
        buttonId: "department-delete",
        deleteAction: "@Url.Action("Delete", "Department", new { id = Model.Id })",
        deleteItemName: "@Model.Name"
    });
</script> 