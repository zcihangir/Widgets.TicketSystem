@model Widgets.TicketSystem.Models.ContactFormModel
@{
    ViewBag.Title = Loc["Plugins.Widgets.TicketSystem.ContactForm.Edit.Title"];
}

<form asp-controller="TicketSystem" asp-action="EditContactForm" method="post">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-0 d-inline-block">
                            <i class="fa fa-edit"></i>
                            @Loc["Plugins.Widgets.TicketSystem.ContactForm.Edit.Title"] - @Model.Name
                        </h5>
                        <a href="@Url.Action("ContactFormList")" class="btn btn-sm btn-outline-secondary ml-2">
                            <i class="fa fa-arrow-left"></i> @Loc["Plugins.Widgets.TicketSystem.ContactForm.List.BackToList"]
                        </a>
                    </div>
                    <div class="btn-group">
                        <button class="btn btn-success" type="submit" name="save">
                            <i class="fa fa-check"></i> @Loc["Admin.Common.Save"]
                        </button>
                        <button class="btn btn-info" type="submit" name="save-continue">
                            <i class="fa fa-check-circle"></i> @Loc["Admin.Common.SaveContinue"]
                        </button>
                        <button type="button" id="contactform-delete" class="btn btn-danger">
                            <i class="fa fa-trash"></i> @Loc["Admin.Common.Delete"]
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <partial name="_CreateOrUpdateContactForm" model="Model" />
                </div>
            </div>
        </div>
    </div>
</form>

<admin-delete-confirmation button-id="contactform-delete" action-name="DeleteContactForm" />

<script>
    $(document).ready(function() {
        $('#contactform-delete').click(function(e) {
            e.preventDefault();
            $('#delete-window').data('id', '@Model.Id').modal('toggle');
        });
    });
</script> 