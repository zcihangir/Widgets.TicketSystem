@model CreateTicketModel
@using Widgets.TicketSystem.Models

@{
    Layout = "_SingleColumn";
    ViewBag.Title = Loc["Plugins.Widgets.TicketSystem.CreateTicket.Title"];
}



<div class="page account-page create-ticket-page">
    <h1 class="h2 generalTitle">@Loc["Plugins.Widgets.TicketSystem.CreateTicket.Title"]</h1>
    
    <div class="page-body">
        <div class="card">
            <div class="card-body">
                <form asp-controller="TicketSystem" asp-action="CreateTicket" method="post">
                    <input type="hidden" asp-for="OrderId" />
                    <input type="hidden" asp-for="ProductId" />
                    
                    <div asp-validation-summary="ModelOnly" class="message-error"></div>
                    
                    @if (!string.IsNullOrEmpty(Model.OrderId))
                    {
                        <div class="alert alert-info mb-3">
                            <b-icon icon="info-circle"></b-icon> @Loc["Plugins.Widgets.TicketSystem.CreateTicket.ForOrder", Model.OrderId]
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.ProductId))
                    {
                        <div class="alert alert-info mb-3">
                            <b-icon icon="info-circle"></b-icon> @Loc["Plugins.Widgets.TicketSystem.CreateTicket.ForProduct", Model.ProductName]
                        </div>
                    }
                    
                    <div class="form-group">
                        <label asp-for="Subject">@Loc["Plugins.Widgets.TicketSystem.CreateTicket.Subject"] <span class="required">*</span></label>
                        <input asp-for="Subject" class="form-control" required />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Department">@Loc["Plugins.Widgets.TicketSystem.CreateTicket.Department"] <span class="required">*</span></label>
                        <select asp-for="Department" asp-items="Model.AvailableDepartments" class="form-control" required></select>
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Message">@Loc["Plugins.Widgets.TicketSystem.CreateTicket.Message"] <span class="required">*</span></label>
                        <textarea asp-for="Message" class="form-control" rows="10" required></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            <b-icon icon="send"></b-icon> @Loc["Plugins.Widgets.TicketSystem.CreateTicket.Submit"]
                        </button>
                        <a href="@Url.Action("CustomerTickets", "TicketSystem")" class="btn btn-secondary">
                            <b-icon icon="x"></b-icon> @Loc["Plugins.Widgets.TicketSystem.CreateTicket.Cancel"]
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 